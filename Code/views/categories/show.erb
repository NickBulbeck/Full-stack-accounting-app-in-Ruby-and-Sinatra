
<div class = "displayWrapper">
  <div class = "displayHeader transactionPale">
    <h1>Transactions for category: <%=@category.name%></h1>
  </div>
</div> 


<div class = "displayContent">
  <div class = "navbarDiv navbarDivNarrow">
    <a href="/transactions/new">
      <div class = "navbarElementDiv transactionLink">
        ADD A NEW TRANSACTION
      </div>
    </a>
  </div>
  <div class = "displayTableDiv transactionTable">
    <table>
      <tr>
        <th>Date</th>
        <th>Payee</th>
        <th>Amount</th>
      </tr>
      <% for transaction in @transactions %>
      <tr>
        <td>
          <%= transaction.transaction_date %></a></td>
        <td><%= transaction.payee %></td>
        <td><%= transaction.amount %></td>
        <td> <form action = "/transactions/<%=transaction.id%>/delete" method = "POST">
                <button type = "submit" value = "delete transaction">Delete</button>
              </form>
        </td>
        <td class = "transactionTableLink"><a href = "/transactions/<%= transaction.id %>/edit">Edit transaction</a>
        </td>
      </tr>
    <% end %>
    </table>
  </div> <!-- displayTableDiv -->
</div> <!-- displayContent -->
